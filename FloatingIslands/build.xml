<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="FloatingIslands" basedir="." default="run">

	<target name="compile" description="Compiles all files">
		<javac srcdir="src" destdir="bin"/>
	</target>

	<target name="jar" description="Creates the JAR" depends="compile">
		<copy file="plugin.yml" todir="bin"/>
		<copy file="config.yml" todir="bin"/>
		<copy file="README.txt" todir="bin"/>
		<jar destfile="BukkitServer/plugins/FloatingIslands.jar" basedir="bin"/>
	</target>

	<target name="run" description="Run the Bukkit server" depends="jar">
		<exec executable="BukkitServer/startServer.bat"/>
	</target>

	<target name="cleanWorld" description="removes the genearted Minecraft World">
		<delete dir="BukkitServer/floatingIslands"/>
	</target>
	
	<target name="cleanAll" description="clean up all" depends="cleanWorld">
		<delete>
			<fileset dir="bin">
	    		<include name="*.class"/>
			</fileset>
		</delete>
		<delete file="BukkitServer/plugins/FloatingIslands.jar"/>
	</target>
	
</project>